@model ReffugeMVC.Models.Diario

@{
    ViewData["Title"] = "Create";
}

<h1>Criar</h1>

<h4>Diário</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DataHorario" class="control-label">Data e Hora</label>
                <input asp-for="DataHorario" class="form-control" />
                <span asp-validation-for="DataHorario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConteudoDiario" class="control-label">Diário</label>
                <input asp-for="ConteudoDiario" class="form-control" />
                <span asp-validation-for="ConteudoDiario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClienteId" class="control-label">Cliente</label>
                <select asp-for="ClienteId" class ="form-control" asp-items="ViewBag.ClienteId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-segundo" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-primary">Voltar para a lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
