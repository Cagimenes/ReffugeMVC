@model IEnumerable<ReffugeMVC.Models.Conteudo>

@{
    ViewData["Title"] = "Index";
}

<h1>Conteúdo</h1>

<p>
    <a asp-action="Create" class="btn btn-segundo">Criar Novo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NomeConteudo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TipoConteudo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NomeConteudo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TipoConteudo.NomeTipoConteudo)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ConteudoId" class="btn btn-primary">Editar</a> 
                <a asp-action="Details" asp-route-id="@item.ConteudoId" class="btn btn-primary">Detalhes</a> 
                <a asp-action="Delete" asp-route-id="@item.ConteudoId" class="btn btn-primary">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
