@model ReffugeMVC.Models.Conteudo

@{
    ViewData["Title"] = "Delete";
}

<h1>Deletar</h1>

<h3>Você tem certeza que deseja deletar isso?</h3>
<div>
    <h4>Conteúdo</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NomeConteudo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NomeConteudo)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TipoConteudo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TipoConteudo.NomeTipoConteudo)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="ConteudoId" />
        <input type="submit" value="Deletar" class="btn btn-segundo" /> 
        <a asp-action="Index" class="btn btn-primary">Voltar para a lista</a>
    </form>
</div>