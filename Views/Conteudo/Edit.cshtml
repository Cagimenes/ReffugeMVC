@model ReffugeMVC.Models.Conteudo

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar</h1>

<h4>Conteúdo</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ConteudoId" />
            <div class="form-group">
                <label asp-for="NomeConteudo" class="control-label">Conteúdo</label>
                <input asp-for="NomeConteudo" class="form-control" />
                <span asp-validation-for="NomeConteudo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TipoConteudoId" class="control-label">Tipo de Conteúdo</label>
                <select asp-for="TipoConteudoId" class="form-control" asp-items="ViewBag.TipoConteudoId"></select>
                <span asp-validation-for="TipoConteudoId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-segundo" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-primary">Voltar para a lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
