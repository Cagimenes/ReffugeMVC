@model IEnumerable<ReffugeMVC.Models.Exercicios>

@{
    ViewData["Title"] = "Index";
}

<h1>Exercícios</h1>

<p>
    <a asp-action="Create" class="btn btn-segundo">Criar Novo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NomeExercicios)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TipoExercicios)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NomeExercicios)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TipoExercicios.NomeTipoExercicios)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ExerciciosId" class="btn btn-primary">Editar</a>
                <a asp-action="Details" asp-route-id="@item.ExerciciosId" class="btn btn-primary">Detalhes</a>
                <a asp-action="Delete" asp-route-id="@item.ExerciciosId" class="btn btn-primary">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
