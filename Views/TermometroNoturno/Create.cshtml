@model ReffugeMVC.Models.TermometroNoturno

@{
    ViewData["Title"] = "Create";
}

<h1>Criar</h1>

<h4>Termômetro Noturno</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Data" class="control-label">Data</label>
                <input asp-for="Data" class="form-control" />
                <span asp-validation-for="Data" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DuracaoSonoId" class="control-label">Duração do Sono</label>
                <select asp-for="DuracaoSonoId" class ="form-control" asp-items="ViewBag.DuracaoSonoId"></select>
            </div>
            <div class="form-group">
                <label asp-for="VezesAcordou" class="control-label">Vezes que Acordou</label>
                <input asp-for="VezesAcordou" class="form-control" />
                <span asp-validation-for="VezesAcordou" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TipoSentimentoSonoId" class="control-label">Sentimento do Sono</label>
                <select asp-for="TipoSentimentoSonoId" class ="form-control" asp-items="ViewBag.TipoSentimentoSonoId"></select>
            </div>
            <div class="form-group">
                <label asp-for="ClienteId" class="control-label">Cliente</label>
                <select asp-for="ClienteId" class ="form-control" asp-items="ViewBag.ClienteId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-segundo" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-primary">Voltar para a lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
