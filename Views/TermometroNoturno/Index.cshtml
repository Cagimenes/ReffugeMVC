@model IEnumerable<ReffugeMVC.Models.TermometroNoturno>

@{
    ViewData["Title"] = "Index";
}

<h1>Termômetro Noturno</h1>

<p>
    <a asp-action="Create" class="btn btn-segundo">Criar Novo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Data)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DuracaoSono)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VezesAcordou)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TipoSentimentoSono)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cliente)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Data)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DuracaoSono.NomeDuracaoSono)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VezesAcordou)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TipoSentimentoSono.NomeTipoSentimentoSono)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cliente.NomeCliente)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.TermometroNoturnoId" class="btn btn-primary">Editar</a>
                <a asp-action="Details" asp-route-id="@item.TermometroNoturnoId" class="btn btn-primary">Detalhes</a>
                <a asp-action="Delete" asp-route-id="@item.TermometroNoturnoId" class="btn btn-primary">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
