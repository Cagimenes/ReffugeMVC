@model IEnumerable<ReffugeMVC.Models.TermometroEmocional>

@{
    ViewData["Title"] = "Index";
}

<h1>Termômetro Emocional</h1>

<p>
    <a asp-action="Create" class="btn btn-segundo">Criar Novo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TipoEmocao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cliente)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Data)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TipoEmocao.NomeTipoEmocao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cliente.NomeCliente)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Data)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.TermometroEmocionalId" class="btn btn-primary">Editar</a>
                <a asp-action="Details" asp-route-id="@item.TermometroEmocionalId" class="btn btn-primary">Detalhes</a>
                <a asp-action="Delete" asp-route-id="@item.TermometroEmocionalId" class="btn btn-primary">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
